	<% @listings.each do |listing| %>


    <div class="col-md-4 col-sm-4">

			<div class="panel panel-default panel-front">

				<div class="panel-heading">

					<h4 class="panel-title"><img src="http://lorempixel.com/50/50?rand=1"></h4>

				</div>

				<div class="panel-body">

					<div class="game-title"><%= link_to listing.game_title, listing_path(listing) %></div>
<%= listing.valuation %>
				<div class="text-right">
					<%= link_to "詳細ページへ", listing_path(listing), class:"btn btn-info btn-sm",role:"button" %>
				</div>

				</div>
			</div>

		</div>

    <% end %>


